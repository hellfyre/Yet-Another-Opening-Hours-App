<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   

    <TextView
        android:id="@+id/nodeEditTextViewOpeningHoursString"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dip" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/monday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewMonday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>

            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/tuesday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewTuesday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/wednesday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewWednesday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/thursday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewThursday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/friday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewFriday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/saturday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewSaturday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>
            
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:padding="3dip"
                android:text="@string/sunday_short"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/nodeEditGridViewSunday"
                android:columnWidth="70dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="10dp"
                android:numColumns="auto_fit" >
            </GridView>
            
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/nodeEditButtonAddHourRanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_definition" />

        <Button
            android:id="@+id/nodeEditButtonUploadChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transmitChangesString" />
    </LinearLayout>

</LinearLayout>