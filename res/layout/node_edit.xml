<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextViewOpeningHoursString"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonAddDefiniton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_definition" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayoutOuter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearLayoutWeek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

<Button
    android:id="@+id/buttonSelectMoFr"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="" />

                <TableLayout
                    android:id="@+id/tableLayoutWeek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRowMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutMonday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" >

                            <CheckBox
                                android:id="@+id/checkBoxMonday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/monday_short" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutTuesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <CheckBox
                                android:id="@+id/checkBoxTuesday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/tuesday_short" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutWednesday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <CheckBox
                                android:id="@+id/checkBoxWednesday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/wednesday_short" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutThursday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <CheckBox
                                android:id="@+id/checkBoxThursday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/thursday_short" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutFriday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <CheckBox
                                android:id="@+id/checkBoxFriday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/friday_short" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutWeekend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button android:id="@+id/buttonSelectSaSu" android:layout_width="wrap_content" android:layout_height="match_parent" android:text=""/>
                
                <TableLayout
                    android:id="@+id/tableLayoutWeekend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRowSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutSaturday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <CheckBox
                                android:id="@+id/checkBoxSaturday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/saturday_short" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayoutSunday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <CheckBox
                                android:id="@+id/checkBoxSunday"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="@string/sunday_short" />
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>