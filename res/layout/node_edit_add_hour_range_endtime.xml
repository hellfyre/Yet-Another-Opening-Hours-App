<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TimePicker
            android:id="@+id/nodeEditTimePickerEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="3dip" />

        <CheckBox
            android:id="@+id/nodeEditCheckBoxOpenEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nodeEditTimePickerEndTime"
            android:layout_centerHorizontal="true"
            android:text="Open end" />

    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/nodeEditButtonBackEndtime"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Button
                android:id="@+id/nodeEditButtonCancelEndtime"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/nodeEditButtonFinishEndtime"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="Finish" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>